

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  telefone  String 
  password  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  messages_sent  Message[] @relation("UserToMessage")
  messages_received  Message[] @relation("RecipientToMessage")

  //nome da tabela
  @@map("users")
}

model Message {
  id         String   @id @default(uuid())
  content    String
  sent_at    DateTime @default(now())
  
  sender     User     @relation("UserToMessage", fields: [senderId], references: [id])
  senderId   String
  
  recipient  User     @relation("RecipientToMessage", fields: [recipientId], references: [id])
  recipientId String
//nome da tabela
  @@map("messages")
}
